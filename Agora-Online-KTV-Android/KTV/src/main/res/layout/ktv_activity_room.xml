<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar_att_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ktv_ic_close_round"
        app:titleTextColor="@android:color/white"
        tools:title="@string/ktv_app_name" />

    <io.agora.ktv.widget.LrcControlView
        android:id="@+id/lrcControlView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar_att_room" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_att_room"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintTop_toBottomOf="@+id/lrcControlView"
        app:spanCount="4"
        tools:itemCount="8"
        tools:listitem="@layout/ktv_item_room_speaker" />

    <ImageButton
        android:id="@+id/btn_mic_att_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:background="@null"
        android:contentDescription="@string/ktv_toggle_mic"
        android:src="@drawable/ktv_ic_mic_enable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="lollipop" />

    <ImageButton
        android:id="@+id/btn_change_cover_att_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@null"
        android:contentDescription="@string/ktv_choose_cover"
        android:src="@drawable/ktv_ic_image"
        app:layout_constraintBottom_toBottomOf="@+id/btn_mic_att_room"
        app:layout_constraintStart_toEndOf="@+id/btn_mic_att_room"
        tools:targetApi="lollipop" />

    <ImageButton
        android:id="@+id/btn_more_att_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@null"
        android:contentDescription="@string/ktv_choose_cover"
        android:src="@drawable/ic_more"
        app:layout_constraintBottom_toBottomOf="@+id/btn_mic_att_room"
        app:layout_constraintStart_toEndOf="@+id/btn_change_cover_att_room"
        tools:targetApi="lollipop" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_chorus_att_room"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ktv_gradient_btn"
        android:contentDescription="@string/ktv_chorus"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/ktv_chorus"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/btn_order_song_att_room"
        app:layout_constraintTop_toTopOf="@+id/btn_order_song_att_room" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_order_song_att_room"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/ktv_gradient_btn"
        android:contentDescription="@string/ktv_order_song"
        android:insetTop="0dp"
        android:outlineProvider="background"
        android:insetBottom="0dp"
        android:text="@string/ktv_order_song"
        app:backgroundTint="@null"
        app:icon="@drawable/ktv_ic_mic"
        app:iconPadding="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_mic_att_room"
        app:layout_constraintEnd_toEndOf="parent"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/tvNoOnSeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/ktv_room_before_speaker"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="gone" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_on_seat_att_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="btn_mic_att_room,btn_change_cover_att_room,btn_more_att_room,btn_chorus_att_room,btn_order_song_att_room"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>
