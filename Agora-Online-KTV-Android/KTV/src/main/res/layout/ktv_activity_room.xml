<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#494949"
        android:fitsSystemWindows="true"
        android:keepScreenOn="true">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="15dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="15dp" />

        <ImageView
            android:id="@+id/ivLeave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ktv_room_close"
            app:layout_constraintStart_toStartOf="@+id/g1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/ktv_title_size"
            app:layout_constraintStart_toEndOf="@+id/ivLeave"
            app:layout_constraintTop_toTopOf="@+id/ivLeave" />

        <FrameLayout
            android:id="@+id/ivSongControl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/rvSpeakers"
            app:layout_constraintEnd_toEndOf="@+id/g2"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintStart_toStartOf="@+id/g1"
            app:layout_constraintTop_toBottomOf="@+id/tvName">

            <LinearLayout
                android:id="@+id/llNoSing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ktv_shape_room_no_sing_background"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ktv_music_no" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/ktv_room_no_sing_1"
                    android:textColor="#CCFFFFFF"
                    android:textSize="@dimen/ktv_room_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/ktv_room_no_sing_2"
                    android:textColor="#CCFFFFFF"
                    android:textSize="@dimen/ktv_room_text" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rlSing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/ktv_music_background1">

                <io.agora.lrcview.LrcView
                    android:id="@+id/lrcView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#00000000"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/rlMusicMenu"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:lrcCurrentTextColor="#FFFFFF"
                    app:lrcDividerHeight="20dp"
                    app:lrcLabel=" "
                    app:lrcNormalTextColor="#99FFFFFF"
                    app:lrcNormalTextSize="16sp"
                    app:lrcTextGravity="center"
                    app:lrcTextSize="26sp" />

                <TextView
                    android:id="@+id/tvMusicName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@mipmap/ktv_room_music_name"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/rlMusicMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/ktv_shape_room_irc_menu_background"
                    android:padding="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/tvOriginalLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/ktv_room_original"
                        android:textColor="#9BA2AB" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchOriginal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/tvOriginalLabel"
                        android:checked="true"
                        android:track="@drawable/ktv_selector_switch_background" />

                    <ImageView
                        android:id="@+id/ivMusicMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_toStartOf="@+id/ivMusicStart"
                        android:src="@mipmap/ktv_room_music_menu" />

                    <ImageView
                        android:id="@+id/ivMusicStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_toStartOf="@+id/ivChangeSong"
                        android:src="@mipmap/ktv_room_music_pause" />

                    <ImageView
                        android:id="@+id/ivChangeSong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ktv_room_music_qie" />
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSpeakers"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/g2"
            app:layout_constraintStart_toStartOf="@+id/g1"
            app:layout_constraintTop_toBottomOf="@+id/ivSongControl"
            tools:listitem="@layout/ktv_item_room_speaker" />

        <ImageView
            android:id="@+id/ivMic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/ktv_room_mic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/g1" />

        <ImageView
            android:id="@+id/ivBackgroundPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ktv_room_mv"
            app:layout_constraintBottom_toBottomOf="@+id/ivMic"
            app:layout_constraintStart_toEndOf="@+id/ivMic" />

        <ImageView
            android:id="@+id/ivChorus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ktv_chorus"
            app:layout_constraintEnd_toStartOf="@+id/llChooseSong"
            app:layout_constraintTop_toTopOf="@+id/llChooseSong" />

        <LinearLayout
            android:id="@+id/llChooseSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ktv_room_choose_song"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/ivMic"
            app:layout_constraintEnd_toEndOf="@+id/g2">

        </LinearLayout>

        <TextView
            android:id="@+id/tvNoOnSeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/ktv_room_before_speaker"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
