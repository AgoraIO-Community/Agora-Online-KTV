<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.agora.agoraplayerdemo.ui.LiveRoomActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/room_name"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/xplay_view_container">


        </FrameLayout>


    </LinearLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/clientRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="下麦" />
    <Button
        android:id="@+id/ChangeAudio"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_toRightOf="@id/clientRole"
        android:text="原唱/伴奏" />

    <Button
        android:id="@+id/room_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="0dp"
        android:layout_alignParentRight="true"
        android:text="退出房间" />


</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/play01"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="点歌" />
        <Button
            android:id="@+id/switchAudio"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="切歌" />

        <Button
            android:id="@+id/pause"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="start/pause" />
    </LinearLayout>
    <TextView
        android:id="@+id/voiceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="调节人声音量"

        />

    <SeekBar
        android:id="@+id/voiceSeekBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:max="100"
        android:progress="50"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="调节伴奏音量"
        android:id="@+id/songTextView"
        />
    <SeekBar
        android:id="@+id/songSeekBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:max="100"
        android:progress="50"
        />


</LinearLayout>
